<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".signin">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="201dp"
        android:layout_height="234dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp"
        app:srcCompat="@drawable/clogo2" />

    <EditText
        android:id="@+id/editTextEmailsignin"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_baseline_verified_user_24"
        android:ems="10"
        android:hint="Email"
        android:textColor="@color/black"
        android:inputType="textPersonName"
        android:textSize="16dp"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/editTextPasswordsignin"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editTextPasswordsignin"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/pass"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginBottom="90dp"
        android:textColor="@color/black"
        android:layout_alignBottom="@+id/cardView"
        android:layout_alignLeft="@+id/editTextEmailsignin"
        android:layout_alignStart="@+id/editTextEmailsignin" />


    <Button
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:text="Sign In"
        android:id="@+id/cardView"
        android:layout_marginBottom="31dp"
        android:textColor="@color/white"
        android:layout_above="@+id/textView2"
        android:background="@drawable/roundshape"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not a user?Signup"
        android:textColor="@color/black"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:id="@+id/linearLayout">

    </LinearLayout>


</RelativeLayout>